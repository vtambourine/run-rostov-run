unit = 1em
planet-size(value)
	min-value = 0.01em
	if value < min-value
		min-value
	else
		value

planets = {
	earth: planet-size(unit / 31),
	moon: planet-size(unit / 144)
}

body, html
	width: 100%
	height: 100%
	margin: 0
	padding: 0
	color: white
	background-color: black
	font-size: 24pt
	font-family: sans-serif

body
	overflow: hidden

#page
	margin: 24px
	h1
		font-size: 16pt;
		font-weight: normal
		text-align: right

#distance
	position relative
	font-size: 100vw
	height: 100px
	border: 1px solid white

planet(name)
	position: absolute
	top: 50%
	margin-top: -(planets[name]/2)
	width: planets[name]
	height: planets[name]
	border-radius: planets[name]

#earth
	planet('earth')
	left: 0
	background-color: blue

#moon
	planet('moon')
	right: 0
	background-color: lightyellow

#track
	position: absolute
	top: 50%
	left: planets.earth
	right: planets.moon
	height: 1px
	background-color: green

	#progress
		display: inline-block
		width: (2390/390000*100)%
		height: 1px
		background-color: red
		vertical-align: top
		font-size: 11pt
		float: left
	#progress-label
		display:inline
		position: relative
		top: 16px;
		vertical-align: top
		font-size: 11pt
		padding-top: 12px;
		padding-left: 5px;
		border-left: 1px solid white
		float: left
